<Widget>:
    font_name: "DejaVuSans"

<TextField@Label>:
    size_hint: (1.0,dp(60)/app.height)
    canvas:
        Color:
            rgba: (0,1,1,0.2)
        Rectangle:
            pos: self.pos
            size: (self.width,self.height)

<InfoField@Label>:
    size_hint: (1.0,dp(80)/app.height)

<Controls@Button>:
    size_hint: (0.25,1)

<ConfirmButton@Button>:
    size_hint: (0.5,1)

<MainView>:
    orientation: "tb-lr"
    StackLayout:
        orientation: "tb-lr"
        size_hint: (1.0,0.94)
        TextField:
            text: "Game time"
        InfoField:
            id: gametime
            font_size: dp(32)
            text: "00 : 00 : 00"
        TextField:
            text: "Current blinds"
        Label:
            id: currentblinds
            font_size: dp(64)
            size_hint: (1.0,dp(410)/app.height)
            color: "#aaeeff"
            text: "-- : --"
        TextField:
            id: nextblinds
            text: "-- : --"
        InfoField:
            id: timeuntilnextblinds
            font_size: dp(32)
            bgwidth: 0
            text: "-- : --"
            canvas:
                Color:
                    rgba: (0.66,0.93,1.0,0.25)
                Rectangle:
                    pos: self.pos
                    size: (self.bgwidth,self.height)
    StackLayout:
        size_hint: (1.0,0.06)
        orientation: "lr-tb"
        Controls:
            id: startstop
            text: "start"
            on_release: root.start_blinds_timer()
        Controls:
            text: "prev"
            on_release: root.blinds_control("prev")
        Controls:
            text: "next"
            on_release: root.blinds_control("next")
        Controls:
            text: "reset"
            on_release: root.reset()

<ConfirmReset>:
    canvas:
        Color:
            rgba: (1,1,1,0.5)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    BoxLayout:
        ConfirmButton:
            text: "yeah"
            on_release: root.confirm("yeah")
        ConfirmButton:
            text: "nah"
            on_release: root.confirm("nah")
