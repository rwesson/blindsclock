<TextField@Label>:
    size_hint: (1.0,dp(60)/app.height)
    canvas:
        Color:
            rgba: (0,1,1,0.2)
        Rectangle:
            pos: self.pos
            size: (self.width,self.height)

<InfoField@Label>:
    size_hint: (1.0,dp(120)/app.height)

<Controls@Button>:
    size_hint: (0.25,dp(240)/app.height)

<MainView>:
    orientation: "tb-lr"
    StackLayout:
        orientation: "tb-lr"
        size_hint: (1.0,0.9)
        TextField:
            text: "Current blinds"
        InfoField:
            id: currentblinds
            font_size: dp(64)
            color: "#aaeeff"
            text: "-- : --"
        TextField:
            text: "Next blinds"
        InfoField:
            id: nextblinds
            text: "-- : --"
        TextField:
            text: "Blinds go up in"
        InfoField:
            id: timeuntilnextblinds
            font_size: dp(32)
            bgwidth: 0
            text: "-- : --"
            canvas:
                Color:
                    rgba: (0.66,0.93,1.0,0.5)
                Rectangle:
                    pos: self.pos
                    size: (self.bgwidth,self.height)
        TextField:
            text: "Game time"
        InfoField:
            id: gametime
            font_size: dp(32)
            text: "00 : 00 : 00"
    StackLayout:
        size_hint: (1.0,0.1)
        orientation: "lr-tb"
        Controls:
            id: startstop
            text: "start"
            on_release: root.start_blinds_timer()
        Controls:
            text: "prev"
            on_release: root.blinds_control("prev")
        Controls:
            text: "next"
            on_release: root.blinds_control("next")
        Controls:
            text: "reset"
            on_release: root.blinds_control("reset")
