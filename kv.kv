<Widget>:
    font_name: "DejaVuSans"

<TextField@ButtonBehavior+Label>:
    size_hint: (1.0,0.08)
    canvas:
        Color:
            rgba: (0,1,1,0.2)
        Rectangle:
            pos: self.pos
            size: (self.width,self.height)

<InfoField@Label>:
    size_hint: (1.0,0.11)

<Controls@Button>:
    size_hint: (0.22,1)
    background_color: 1,1,1,0.35

<Help@Button>:
    size_hint: (0.12,1)
    background_color: 0.66,0.75,1,0.55

<ConfirmButton@Button>:
    size_hint: (0.5,1)

<SetButton@Button>:
    size_hint: (1,dp(32)/app.height)
    text: "set"

<MainView>:
    orientation: "tb-lr"
    size_hint: (1,0.94)
    StackLayout:
        orientation: "tb-lr"
        size_hint: (1.0,0.84)
        TextField:
            text: "Game time"
        InfoField:
            id: gametime
            font_size: dp(32)
            text: "00 : 00 : 00"
        TextField:
            text: "Current blinds"
        Label:
            id: currentblinds
            font_size: dp(64)
            size_hint: (1.0,0.54)
            color: "#aaeeff"
            text: "-- : --"
            text_size: self.size
            halign: "center"
            valign: "center"
        TextField:
            id: nextblinds
            text: "-- : --"
            on_release: root.show_blind_structure()
        BlindTimeHandler:
            id: timeuntilnextblinds
            size_hint: (1.0,0.11)
            font_size: dp(32)
            bgwidth: 0
            text: "-- : --"
            canvas:
                Color:
                    rgba: (0.66,0.93,1.0,0.25)
                Rectangle:
                    pos: self.pos
                    size: (self.bgwidth,self.height)
    StackLayout:
        size_hint: (1.0,0.06)
        orientation: "lr-tb"
        Controls:
            id: startstop
            text: "start"
            on_release: root.start_blinds_timer()
        Controls:
            text: "prev"
            on_release: root.blinds_control("prev")
        Controls:
            text: "next"
            on_release: root.blinds_control("next")
        Controls:
            text: "reset"
            on_release: root.reset()
        Help:
            text: "âš™"
            on_release: root.show_info()

<ConfirmReset>:
    canvas:
        Color:
            rgba: (1,1,1,0.5)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    BoxLayout:
        ConfirmButton:
            text: "yeah"
            on_release: root.confirm("yeah")
        ConfirmButton:
            text: "nah"
            on_release: root.confirm("nah")

<BlindsStructure>:
    StackLayout:
        orientation: "tb-lr"
        id: blindsstructure
        size_hint: (1, 0.95)

<BlindsDisplayRow@Label>:
    size: (app.width,dp(24))
    size_hint: (None,None)
    text_size: self.size
    halign: "left"
    valign: "center"
    bold: self.highlight
    color: (0.67,0.93,1,1) if self.highlight else (1,1,1,1)
    font_size: sp(18) if self.highlight else sp(15)
    padding: [dp(10),dp(5)]
    canvas:
        Color:
            rgba: (0.5,0.5,0.5,0.1) if self.altrow else (0,0,0,0)
        Rectangle:
            pos: self.pos
            size: (self.width,self.height)

<InfoLabel@Label>:
    size_hint: (None,None)
    size: (app.width,dp(24))
    text_size: self.size
    halign: "left"

<Spacer@Label>:
    size_hint: (1,0.03)

<SelectorRow@StackLayout>:
    orientation: "lr-tb"
    size_hint: (None,None)
    size: (app.width,dp(28))

<SelectorLabel@Label>:
    halign: "left"
    valign: "center"
    size_hint: (0.9,1)
    text_size: self.size

<SelectorCheckBox@CheckBox>:
    size_hint: (0.1,1)
    canvas:
        Color:
            rgba: (0.5,0.5,1.0,0.1)
        Rectangle:
            pos: self.pos
            size: (self.width,self.height)
